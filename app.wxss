/**app.wxss**/
.clearfix:after {content: "";  display: block;  clear: both;  width: 0;  height: 0;  border: 0;  margin: 0;}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.fl{float: left}
.fr{float: right}
.placeholder-c999{
  color: #999; font-weight: 0;
}
button::after {
  border: 0;
}
.c-999{color: #999;}
.bullet-bg{
  background:rgba(0, 0, 0, 0.6); position: fixed; top: 0; left: 0; z-index: 100; width: 100%; height: 100%;
}
.no-data{
  font-size: 26rpx; color: #999; text-align: center; line-height: 600rpx;
}
button,input,select,textarea{
  -webkit-tap-highlight-color: transparent;
}
input:active{
  background: transparent;
}

/*下拉加载*/
.downLoad{
    margin-bottom: 30rpx; width: 100%; position: relative; height:40rpx; line-height: 40rpx;text-align: center; background: #eee;
}
.downLoad text{
    position: relative; z-index:2; color: #999; padding: 0px 10rpx; font-size: 24rpx;
}
