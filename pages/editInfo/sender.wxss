/* pages/editInfo/sender.wxss */
page{
  height: 100%;
}
.receiverSearch-top{
position: fixed; top: 0; left: 0; width: 100%;
}
.receiverSearch-input-bg{
  padding: 40rpx 120rpx 40rpx 30rpx; background: #eee;
}
.receiverSearch-input{
  background: #fff; border-radius: 8rpx; height: 90rpx; padding-left: 66rpx;position: relative;
}
.receiverSearch-input image{
  display: block; height: 28rpx; width: 28rpx;position: absolute; left: 20rpx;  top: 50%; margin-top: -14rpx;
}
.receiverSearch-input input{
  font-size: 26rpx; color: #333; display:block; height: 100%; line-height: 100%;
}
.searchBtn{
  position: absolute; top: 40rpx; right: 30rpx; display: inline; background: none; font-size: 24rpx; color: #49c999; line-height: 90rpx; padding: 0;
}
.receiverSearch-main{
  padding-top: 170rpx; box-sizing: border-box;
}
.receiverSearch-list{
  padding:40rpx 30rpx 40rpx 94rpx; position: relative; font-size: 26rpx; color: #555; line-height: 32rpx; border-bottom: 1rpx solid #ccc;
}
.receiverSearch-list image{
  display: block; width: 28rpx; height: 32rpx; position: absolute;top: 40rpx; left: 50rpx;
}
.receiverSearch-noData{
  padding-top: 280rpx; font-size: 24rpx; line-height: 50rpx; text-align: center; color: #555;
}
.completeMaterial{height: 100%; background: #eee; padding:30rpx 0 210rpx 0rpx; box-sizing: border-box; }
.completeMaterial-form{
  background: #fff;
}
.completeMaterial-list{
  padding:30rpx 30rpx 30rpx 160rpx ; position: relative;
  border-bottom: 1rpx solid #ddd; line-height: 50rpx;
}
.completeMaterial-list:last-child{
  border-bottom: 0;
}
.completeMaterial-text{
  color: #333; font-size: 26rpx;
}
.completeMaterial-list input{
  display: block; height: 50rpx;  padding:0 0 0 0; position: relative;min-height: 50rpx; font-size: 26rpx; color: #333;
}
.completeMaterial-list label{
 position: absolute; top: 30rpx; left: 30rpx; line-height: 50rpx; font-size: 26rpx; color: #333;
}
.completeMaterial-list .crossBorder{
  padding:0 20rpx 0 30rpx; left: 0; background: #fff; line-height: 50rpx;padding-bottom: 33rpx; 
}
.bottom{
  position: fixed; width: 100%;  left: 0; bottom:0;background: #FAFAFA;box-sizing: border-box; padding: 40rpx 120rpx; 
}
.bottom button{
  height: 100rpx; width: 100%; line-height: 100rpx; font-size: 30rpx; color: #fff; display: block; background: #6DD27F;
}