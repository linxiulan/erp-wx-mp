/* pages/qrcode/handler.wxss */
.bindIcon{ display: block; width: 152rpx;height: 120rpx; margin: 160rpx auto 30rpx auto;}
text{
  display: block; text-align: center; color: #1E1E1E; font-size: 24rpx;
}
.mt-40{margin-top: 40rpx}
.company{
  margin-top: 50rpx; color: #1E1E1E; font-size:36rpx; font-weight: 700;
}
.nextBtn{
  display: block; width: 400rpx; height: 80rpx; line-height: 80rpx; border-radius:400rpx; background: #6DD380; color: #fff; border:0; margin-top: 70rpx; font-size: 28rpx;
}
.informationModules{
  background: #EEEEEE; position: fixed; width: 100%; height: 100%; padding-top: 30rpx; box-sizing: border-box;
}
.information-list{
  background: #fff; height: 100rpx; padding-left: 110rpx; position: relative;
  border-bottom: 1rpx solid  #F0F0F0;
}
.information-list label{
  position: absolute; top: 0; left: 30rpx; line-height: 100rpx; font-size: 26rpx; color: #333; 
}
.information-list input{
  display: block; height: 100rpx; padding-right: 30rpx; line-height: 100rpx; font-size: 26rpx; color: #333;
}
.bindBtn{
  width:90%; padding: 0; display: block; border: 0; margin-top: 30rpx;
  height: 80rpx; line-height: 80rpx; border-radius:80rpx; background: #6DD380; color: #fff;font-size: 28rpx;
}
.bindSuccessIcon{display: block; width: 100rpx;height: 100rpx; margin: 100rpx auto 40rpx auto;}
.bindSuccessText{
  font-size: 28rpx; color: #333; font-weight: 600;
}
.bindSuccessBtn{
  width:70%; padding: 0; display: block; border: 0; margin: 60rpx auto 40rpx auto;height: 80rpx; line-height: 80rpx; border-radius:80rpx; background: #6DD380; color: #fff;font-size: 28rpx;
}
.bindSuccessPrompt{
  width: 90%; padding: 40rpx 0; margin: 0 auto; border-top: 1rpx dashed #ddd; font-size: 24rpx; text-align: center; color: #999;
}