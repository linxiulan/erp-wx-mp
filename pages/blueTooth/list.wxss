/* pages/blueTooth/list.wxss */
page{
  height: 100%;
}
.blueTooth-failure{
  padding-top: 200rpx;
}
.unopened-Icon{
  display: block; width: 107rpx; height: 141rpx; margin: 0 auto;
}
.blueTooth-failure .title{
  font-size: 28rpx; color: #555; text-align: center; margin-top: 80rpx;
}
.blueTooth-failure .prompt{
font-size: 26rpx; color: #999; text-align: center; margin-top: 40rpx;
}
.blueTooth-failure button{
  font-size: 30rpx; color: #fff; background: #4FC89A;width: 360rpx; height: 90rpx; line-height: 90rpx; margin-top: 140rpx;
}
.blueTooth-complete{
  padding-top: 300rpx;
}
.complete-Icon{
  display: block; width: 130rpx; height: 130rpx; margin: 0 auto;
}
.blueTooth-complete .title{
  font-size: 28rpx; color: #555; text-align: center; margin-top: 80rpx;
}
.blueTooth-normal{
  min-height: 100%;background: #EEEEEE;position: relative;
}
.blueTooth-normal .listMain{
  margin-top: 0rpx;
}
.blueTooth-normal .title{
  height:45rpx; line-height: 30rpx; font-size: 26rpx; color: #555; padding: 30rpx 30rpx 0rpx 30rpx;
}
.blueTooth-normal .list{
  padding:30rpx 30rpx 30rpx 90rpx; background: #fff; color: #333; font-size: 26rpx; line-height: 60rpx;position: relative;
}
.blueTooth-normal .left-Icon{
   display: block; width: 40rpx; height: 40rpx; position: absolute; left: 30rpx;
   top: 50%;margin-top: -20rpx;
}
.blueTooth-normal .right-Icon{
  display: block; width: 36rpx; height: 36rpx; position: absolute; right: 30rpx;
  top: 50%;margin-top: -18rpx;
}
.blueTooth-normal .footer{
  background: #fafafa; position: fixed; bottom: 0; left: 0;
  width: 100%;padding: 40rpx 120rpx; box-sizing: border-box;
}
.blueTooth-normal .footer button{
   position: relative; display: block; height: 100rpx; line-height: 100rpx;
  background: #6DD27F; text-align: center; font-size: 30rpx; border-radius: 10rpx; color: #fff;
}
.blueTooth-loading,.blueTooth-load{
  padding: 30rpx; font-size: 26rpx; color: #999; line-height: 60rpx; vertical-align: top;
}
.blueTooth-load-text{
  position: relative; padding-right: 40rpx; display:inline;
}
.blueTooth-loading image,.blueTooth-load image{
  position: absolute; top: 50%; right: 0; margin-top: -15rpx;
  display: block; width: 30rpx; height: 30rpx; 
}
.blueTooth-load{
  color: #336699;
}
.blueTooth-loading image{
  animation:rotating 1.5s linear 0s infinite;
}
@keyframes rotating{
  from{
    transform:rotate(0deg);
  }
  to{
    transform:rotate(360deg);
  }
}