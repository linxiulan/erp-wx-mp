/* pages/order/detail.wxss */
page{
  display: block;  
  min-height: 100%;
  background-color: #eee;
}
.detail-top{
  background: #fff; padding-left: 30rpx;
}
.orderForm{
  line-height: 100rpx; font-size: 26rpx; color: #555; padding-right: 30rpx;border-bottom: 1rpx solid #ddd;
}
.orderForm label{
  float: right; font-size: 22rpx; color: #fff; background: #51C569;line-height: 44rpx; padding: 0 20rpx;margin-top: 28rpx; border-radius: 8rpx;
}
.orderForm .bg-6ECDF1{
  background: #6ECDF1;
}
.orderForm .bg-F4D869{
  background: #F4D869;
}
.orderForm .bg-999{
  background: #999;
}
.orderForm image{
  display: block; position: absolute; top: 20rpx; right: 30rpx; width: 272rpx; z-index: 1;
}
.route{
  height: 130rpx; line-height: 130rpx; position: relative; font-size: 30rpx; color: #333;
}
.routeStart{
  position: absolute; width: 50%;top: 0; left: 0;padding-right: 100rpx;z-index: 2; text-align: right;box-sizing: border-box;
}
.routeEnd{
  position: absolute;width: 50%; top: 0; right: 0;padding-left: 100rpx;
  z-index: 2;box-sizing: border-box;
}
.route image{
  display: block; width: 150rpx; height: 24rpx;position: absolute; top: 50%;left: 50%; margin-top:-12rpx; margin-left:-75rpx;
}
.contactInfo{ margin-top: 30rpx;}
.contactInfo-list{
  padding: 40rpx 110rpx; background: #fff; border-bottom: 1rpx solid #ddd;position: relative;
}
.contactInfo-list:last-child{
   border-bottom: 0;
}
.contactInfo-list .icon{
  display: block; width: 50rpx; height: 50rpx; position: absolute;left: 30rpx;top: 50%;margin-top: -20rpx; background: #4FC89A; color: #fff; font-size: 26rpx; text-align: center; border-radius: 50rpx; line-height: 50rpx;
}
.contactInfo-list  .c-red{ background: #E68686;}
.contactInfo-hint{ line-height: 100rpx;color: #999; font-size: 26rpx;}
.contactInfo-text{
  font-size: 26rpx; color: #555; line-height: 50rpx;
}
.contactInfo-text .address{
  font-size: 28rpx; color: #333;
}
.contactInfo-list image{
   position: absolute; top:50%; margin-top: -20rpx; right: 30rpx; display: block; width: 40rpx; height: 40rpx;
}
.cargoesInfo{
  margin-top: 30rpx; padding: 30rpx 30rpx 30rpx 110rpx; line-height: 50rpx;font-size: 26rpx; color: #555; position: relative; background: #fff;
}
.cargoesInfo label{
  position: absolute; top: 30rpx; left: 30rpx; color: #333;
}
.costInfo-title{
  margin-top: 30rpx; height: 50rpx; line-height: 50rpx; font-size: 26rpx; color: #555; padding: 0 30rpx;
}
.costInfo-title text{ border:1rpx solid #E29F83; color: #E29F83; font-size: 22rpx; line-height: 48rpx; padding: 0 10rpx; margin-left: 20rpx;}
.costInfoList-main{
  padding:30rpx; padding-bottom:0;  background: #fff;
}
.costInfo-list{
  padding: 0 0 30rpx 130rpx;position: relative;line-height: 40rpx; background: #fff; font-size: 26rpx; color: #555; text-align: right;
}
.costInfo-list text{
  position: absolute; top: 0rpx; left: 0rpx; font-size: 26rpx; color: #555;line-height: 50rpx;text-align: left; 
}
.costInfo-bottom{
  padding: 30rpx; padding-bottom: 40rpx; background: #fff;
}
.costInfo-bottom button{
  display: inline-block; padding: 0 40rpx;height: 80rpx; border:1rpx solid #6CD27F; color: #6CD27F; background: #fff; font-size: 26rpx; line-height: 80rpx; float: left;
}
.costInfo-total{
  font-size: 26rpx; color: #333; text-align: right; line-height: 80rpx; 
} 
.costInfo-other{
   position: relative;overflow: hidden;text-overflow:ellipsis;white-space: nowrap; padding-right: 30rpx;
}
.ordinaryModule{
  margin-top: 30rpx; padding-left: 30rpx; background: #fff;
}
.moduleList{
  padding: 30rpx 30rpx 30rpx 110rpx; line-height: 50rpx;font-size: 26rpx; color: #555; position: relative; background: #fff;border-bottom: 1rpx solid #ddd;min-height: 50rpx;
}
.moduleList:last-child{
  border-bottom: 0;
}
.moduleList label{
  position: absolute; top: 30rpx; left: 0rpx; color: #333;
}
.moduleList image{
  display: inline-block; width: 50rpx; height: 50rpx; 
}
.orderingPersonnel{
  padding: 30rpx;line-height: 50rpx;font-size: 26rpx; color: #555;background: #fff;margin-top: 30rpx;
}
.orderingPersonnel label{ float: right; color: #999; }
.detail-footer{
  height: 140rpx; margin-top: 30rpx;
}
.detail-btn{
  position: fixed; bottom: 0; left: 0; padding:30rpx 30rpx; width: 100%; height:130rpx; background: #FAFAFA; box-sizing: border-box;
}
.detail-btn button{
  display: block; float: right; padding: 0 50rpx; font-size: 28rpx; color: #fff; margin-left: 30rpx; line-height: 70rpx;
}
.detail-btn .btnBlue{
  background: #84DBFD;
}
.detail-btn .btnGreen{
  background: #7EDC98;
}
.modalInput{
  display: block; border:1px solid #ddd; padding: 0 20rpx; font-size: 26rpx;
  color: #555; height: 60rpx; border-radius: 8rpx;
}
.costInfo-textarea text{
  position:absolute;top:0rpx;left:0rpx;font-size:26rpx;color:#555;
line-height:50rpx;text-align:left;
}
textarea{
    position: relative;height: 100rpx; font-size: 26rpx; color: #333; line-height: 50rpx; width: 100%;box-sizing: border-box; border:1rpx solid #ddd
}